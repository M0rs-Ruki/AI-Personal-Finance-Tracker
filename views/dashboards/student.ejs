<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Secure Futurism Student Dashboard</title>
  <link rel="shortcut icon" href="/images/logo.png" type="image/x-icon" />
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <link
    href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Orbitron:wght@400;500;600;700&display=swap"
    rel="stylesheet" />
  <link rel="stylesheet" href="/styles/dashboard/student.css">
  <script>
    tailwind.config = {
      theme: {
        extend: {
          colors: {
            "dark-bg": "#0F0F0F",
            "card-bg": "#1A1A1A",
            "gold-primary": "#D4AF37",
            "gold-secondary": "#FFD700",
            "muted-white": "#EAEAEA",
            "futurism-blue": "#0ea5e9",
          },
          fontFamily: {
            montserrat: ["Montserrat", "sans-serif"],
            orbitron: ["Orbitron", "sans-serif"],
          },
          boxShadow: {
            "gold-glow": "0 0 15px rgba(212, 175, 55, 0.5)",
            "gold-glow-md": "0 0 25px rgba(212, 175, 55, 0.7)",
            "blue-glow": "0 0 15px rgba(14, 165, 233, 0.5)",
          },
          animation: {
            "pulse-gold":
              "pulse-gold 2s cubic-bezier(0.4, 0, 0.6, 1) infinite",
            float: "float 6s ease-in-out infinite",
            "pulse-blue":
              "pulse-blue 4s cubic-bezier(0.4, 0, 0.6, 1) infinite",
          },
          keyframes: {
            "pulse-gold": {
              "0%, 100%": { "box-shadow": "0 0 0 0 rgba(212, 175, 55, 0.7)" },
              "50%": { "box-shadow": "0 0 0 10px rgba(212, 175, 55, 0)" },
            },
            float: {
              "0%, 100%": { transform: "translateY(0)" },
              "50%": { transform: "translateY(-10px)" },
            },
            "pulse-blue": {
              "0%, 100%": { "box-shadow": "0 0 0 0 rgba(14, 165, 233, 0.3)" },
              "50%": { "box-shadow": "0 0 0 15px rgba(14, 165, 233, 0)" },
            },
          },
        },
      },
    };
  </script>
</head>

<body class="min-h-screen py-4 px-3 sm:py-8 sm:px-4 lg:px-8">
  <div class="max-w-7xl mx-auto">
    <!-- Top Navigation Bar -->
    <nav class="futuristic-border mb-6 sm:mb-10 py-4 sm:py-5 px-4 sm:px-8 flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
      <!-- Left Branding -->
      <div class="flex items-center space-x-3 w-full sm:w-auto justify-center sm:justify-start">
        <div class="hexagon w-12 h-12 sm:w-14 sm:h-14 flex items-center justify-center blue-gradient">
          <i class="fas fa-graduation-cap text-dark-bg text-lg sm:text-xl"></i>
        </div>
        <div class="text-center sm:text-left">
          <h1 class="text-lg sm:text-xl font-bold font-orbitron tracking-wider">
            EDU<span class="text-gold-primary">FUTURE</span>
            <div class="inline-block ml-2 sm:ml-4 text-xs bg-[#FFD700] text-[#0F0F0F] px-2 py-1 rounded font-bold font-montserrat tracking-wider">
              BETA
            </div>
          </h1>
          <p class="text-xs text-gray-400">Student Financial Dashboard</p>
        </div>
      </div>

      <!-- Navigation Icons -->
      <div class="dashboard-header header-option1 flex items-center space-x-4 sm:space-x-6">
        <div class="nav-icons flex items-center space-x-4 sm:space-x-6 text-[#FFD700]">
          
          <!-- Profile Icon -->
          <div
            class="nav-icon text-2xl sm:text-3xl p-2 rounded-full hover:shadow-gold-glow transition-all duration-300 ease-in-out cursor-pointer"
            title="Profile"
            onclick="window.location.href='/user/profile'">
            <i class="fas fa-user"></i>
          </div>
          
          <!-- Settings Icon with Notification Dot -->
          <div
            class="nav-icon relative text-2xl sm:text-3xl p-2 rounded-full hover:shadow-gold-glow transition-all duration-300 ease-in-out cursor-pointer"
            title="Settings"
            onclick="window.location.href='/student/edit'">
            <i class="fas fa-cog"></i>
            <div class="notification-dot absolute top-1 right-1 w-2.5 h-2.5 rounded-full bg-[#FFD700] animate-ping"></div>
          </div>

          <!-- Logout Icon -->
          <div
            class="nav-icon text-2xl sm:text-3xl p-2 rounded-full hover:shadow-gold-glow transition-all duration-300 ease-in-out cursor-pointer"
            title="Logout"
            onclick="window.location.href='/user/logout'">
            <i class="fas fa-sign-out-alt"></i>
          </div>
          
        </div>
      </div>
    </nav>

    <!-- Welcome Header -->
    <div class="grid-header mb-6 sm:mb-8">
      <div class="holographic-card p-4 sm:p-6 lg:p-8 relative overflow-hidden">
        <div class="circuit-pattern"></div>
        <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center space-y-4 lg:space-y-0">
          <div>
            <h1 class="text-xl sm:text-2xl lg:text-3xl font-bold mb-2">
              Welcome back,
              <span class="text-gold-primary block sm:inline">
                <%= user.fullName %>
              </span>
              <span class="text-futurism-blue">ðŸš€</span>
            </h1>
            <p class="text-gray-400 text-sm sm:text-base">
              Here's your financial overview for this week
            </p>
          </div>
          <div class="w-full lg:w-auto flex justify-center lg:justify-end">
            <div class="futuristic-input flex items-center text-sm">
              <i class="fas fa-calendar-alt text-gold-primary mr-2"></i>
              <span>
                <%= new Date().toDateString() %>
              </span>
            </div>
          </div>
        </div>
        
        <!-- Stats Grid -->
        <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-3 sm:gap-4">
          <div class="bg-black/30 p-3 sm:p-4 rounded-xl border border-gold-primary/20 flex items-center">
            <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-gold-primary/10 flex items-center justify-center mr-3 flex-shrink-0">
              <i class="fas fa-rupee-sign text-gold-primary text-sm sm:text-base"></i>
            </div>
            <div>
              <p class="text-gray-400 text-xs sm:text-sm">Monthly Allowance</p>
              <p class="text-lg sm:text-xl font-bold">
                <%= student.monthlyAllowance.toLocaleString('en-IN') %>
              </p>
            </div>
          </div>
          
          <div class="bg-black/30 p-3 sm:p-4 rounded-xl border border-gold-primary/20 flex items-center">
            <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-gold-primary/10 flex items-center justify-center mr-3 flex-shrink-0">
              <i class="fas fa-wallet text-gold-primary text-sm sm:text-base"></i>
            </div>
            <% const totalSpent=student.customCategories?.reduce((sum, cat)=> sum + (cat.actualSpent || 0), 0);
              const remaining = student.monthlyAllowance - totalSpent;
              const totalSaved = student.financialGoals?.reduce((sum, goal) => sum + (goal.savedAmount || 0), 0);
              const monthlyIncome = student.monthlyAllowance || 1;
              const savingsRate = Math.max(Math.min((totalSaved / monthlyIncome) * 100, 100), 0).toFixed(1);
              %>
            <div>
              <p class="text-gray-400 text-xs sm:text-sm">Remaining</p>
              <p class="text-lg sm:text-xl font-bold <%= remaining >= 0 ? 'text-green-400' : 'text-red-400' %>">
                â‚¹<%= remaining.toLocaleString('en-IN') %>
              </p>
            </div>
          </div>
          
          <div class="bg-black/30 p-3 sm:p-4 rounded-xl border border-gold-primary/20 flex items-center">
            <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-gold-primary/10 flex items-center justify-center mr-3 flex-shrink-0">
              <i class="fas fa-bullseye text-gold-primary text-sm sm:text-base"></i>
            </div>
            <div>
              <p class="text-gray-400 text-xs sm:text-sm">Active Goals</p>
              <p class="text-lg sm:text-xl font-bold">
                <%= student.financialGoals.length %>
              </p>
            </div>
          </div>
          
          <div class="bg-black/30 p-3 sm:p-4 rounded-xl border border-gold-primary/20 flex items-center">
            <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-gold-primary/10 flex items-center justify-center mr-3 flex-shrink-0">
              <i class="fas fa-chart-line text-gold-primary text-sm sm:text-base"></i>
            </div>
            <div>
              <p class="text-gray-400 text-xs sm:text-sm">Savings Rate</p>
              <p class="text-lg sm:text-xl font-bold <%= savingsRate >= 20 ? 'text-green-400' : 'text-yellow-400' %>">
                <%= savingsRate %>%
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Dashboard Content -->
    <div class="dashboard-grid flex flex-col gap-6 lg:grid lg:gap-6">
      <!-- Summary Section -->
      <div class="grid-summary">
        <div class="holographic-card p-4 sm:p-6 mb-6">
          <div class="flex justify-between items-center mb-4 sm:mb-6">
            <h2 class="text-lg sm:text-xl font-bold font-orbitron text-gold-primary tracking-wider">
              ðŸ“Š BUDGET OVERVIEW
            </h2>
          </div>

          <div class="space-y-4 sm:space-y-5">
            <% if (student.customCategories && student.customCategories.length> 0) { %>
              <% student.customCategories.forEach((cat)=> {
                const spent = cat.actualSpent || 0;
                const limit = cat.budgetLimit || 1;
                const usage = Math.min((spent / limit) * 100, 100).toFixed(1);
                %>
                <div class="mb-4 sm:mb-6">
                  <div class="flex justify-between mb-2">
                    <div class="flex items-center">
                      <div class="w-8 h-8 rounded-full bg-gold-primary/10 flex items-center justify-center mr-3 flex-shrink-0">
                        <i class="fas fa-book text-gold-primary text-sm"></i>
                      </div>
                      <h3 class="font-semibold text-sm sm:text-base truncate max-w-[120px] sm:max-w-none">
                        <%= cat.name %>
                      </h3>
                    </div>
                    <div class="text-xs sm:text-sm flex-shrink-0">
                      <span class="text-gold-primary">â‚¹<%= spent.toLocaleString('en-IN') %></span>
                      <span class="text-gray-500">/ â‚¹<%= limit.toLocaleString('en-IN') %></span>
                    </div>
                  </div>

                  <div class="flex items-center">
                    <div class="progress-bar flex-1 mr-3 bg-gray-800 h-2 rounded overflow-hidden">
                      <div class="progress-bar-fill bg-gold-primary h-2" style="width: <%= usage %>%"></div>
                    </div>
                    <span class="text-xs sm:text-sm text-yellow-500 flex-shrink-0">
                      <%= usage %>%
                    </span>
                  </div>

                  <% if (usage>= 90) { %>
                    <div class="mt-1 text-xs text-red-400 flex items-center">
                      <i class="fas fa-exclamation-circle mr-1"></i>
                      <span class="truncate">You've used <%= usage %>% of your "<%= cat.name %>" budget</span>
                    </div>
                  <% } %>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-sm text-gray-500 italic">No budget categories set up.</p>
            <% } %>

            <div class="pt-4">
              <button id="open-modal"
                class="w-full py-3 rounded-xl border border-dashed border-gold-primary/40 flex items-center justify-center text-gold-primary hover:bg-gold-primary/10 transition text-sm sm:text-base"
                type="button">
                <i class="fas fa-plus mr-2"></i> Add New Category
              </button>
            </div>
          </div>
        </div>

        <!-- Education Info -->
        <div class="holographic-card p-4 sm:p-6">
          <h2 class="text-lg sm:text-xl font-bold font-orbitron text-gold-primary tracking-wider mb-4 sm:mb-6">
            ðŸŽ“ EDUCATION PROFILE
          </h2>

          <div class="grid grid-cols-1 gap-6">
            <div>
              <div class="flex items-center mb-4">
                <div class="w-12 h-12 rounded-xl bg-gold-primary/10 flex items-center justify-center mr-3 flex-shrink-0">
                  <i class="fas fa-university text-lg sm:text-xl text-gold-primary"></i>
                </div>
                <div>
                  <h3 class="font-bold text-sm sm:text-base truncate">
                    <%= student.institutionName %>
                  </h3>
                  <p class="text-xs sm:text-sm text-gray-400">
                    Computer Science Engineering
                  </p>
                </div>
              </div>

              <div class="bg-black/30 p-3 sm:p-4 rounded-xl border border-gold-primary/20 mt-4">
                <div class="flex justify-between mb-2">
                  <span class="text-gray-400 text-xs sm:text-sm">Semester Progress</span>
                  <span class="text-gold-primary text-xs sm:text-sm">75%</span>
                </div>
                <div class="progress-bar">
                  <div class="progress-bar-fill" style="width: 75%"></div>
                </div>
              </div>
            </div>

            <div class="space-y-3 sm:space-y-4">
              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-blue-500/10 flex items-center justify-center mr-3 flex-shrink-0">
                  <i class="fas fa-home text-blue-400"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-sm sm:text-base">Accommodation</h3>
                  <p class="text-xs sm:text-sm text-gray-400 truncate">
                    <%= student.livingSituation %>
                  </p>
                </div>
              </div>

              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-green-500/10 flex items-center justify-center mr-3 flex-shrink-0">
                  <i class="fas fa-graduation-cap text-green-400"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-sm sm:text-base">Level</h3>
                  <p class="text-xs sm:text-sm text-gray-400">
                    <%= student.educationLevel %>
                  </p>
                </div>
              </div>

              <div class="flex items-center">
                <div class="w-10 h-10 rounded-full bg-purple-500/10 flex items-center justify-center mr-3 flex-shrink-0">
                  <i class="fas fa-money-bill-wave text-purple-400"></i>
                </div>
                <div>
                  <h3 class="font-semibold text-sm sm:text-base">Funding</h3>
                  <p class="text-xs sm:text-sm text-gray-400">
                    <%= student.isParentFunded %>
                  </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- Finance Section -->
      <div class="grid-finance">
        <div class="holographic-card p-4 sm:p-6 h-auto lg:h-full">
          <div class="flex justify-between items-center mb-4 sm:mb-6">
            <h2 class="text-lg sm:text-xl font-bold font-orbitron text-gold-primary tracking-wider">
              ðŸ’¸ FINANCE SNAPSHOT
            </h2>
            <button class="text-gold-primary">
              <i class="fas fa-ellipsis-h"></i>
            </button>
          </div>

          <div class="flex flex-col items-center mb-6 sm:mb-8">
            <div class="relative mb-6">
              <!-- Main Circle - Responsive sizes -->
              <div class="w-40 h-40 sm:w-48 sm:h-48 rounded-full border-4 sm:border-8 border-gray-800 flex items-center justify-center">
                <div class="w-32 h-32 sm:w-40 sm:h-40 rounded-full border-2 sm:border-4 border-gold-primary/30 flex items-center justify-center">
                  <div class="text-center">
                    <div class="text-lg sm:text-2xl font-bold text-gold-primary">
                      â‚¹<%= remaining.toLocaleString('en-IN') %>
                    </div>
                    <div class="text-gray-400 text-xs sm:text-sm">Available</div>
                  </div>
                </div>
              </div>

              <!-- Floating Elements - Adjusted for mobile -->
              <div class="absolute -top-2 -right-2 sm:top-0 sm:right-0 w-16 h-16 sm:w-20 sm:h-20 rounded-full bg-blue-500/10 border border-blue-500/30 flex items-center justify-center floating-element">
                <div class="text-center">
                  <div class="text-xs text-blue-400">Spent</div>
                  <div class="text-blue-400 font-bold text-xs sm:text-sm">â‚¹<%= totalSpent.toLocaleString('en-IN') %></div>
                </div>
              </div>

              <div class="absolute -bottom-2 -left-2 sm:bottom-0 sm:left-0 w-16 h-16 sm:w-20 sm:h-20 rounded-full bg-green-500/10 border border-green-500/30 flex items-center justify-center floating-element" style="animation-delay: 1.5s">
                <div class="text-center">
                  <div class="text-xs text-green-400">Saved</div>
                  <div class="text-green-400 font-bold text-xs sm:text-sm">â‚¹<%= totalSaved.toLocaleString('en-IN') %></div>
                </div>
              </div>
            </div>

            <!-- Monthly Allowance and Progress Bar -->
            <div class="text-center w-full">
              <p class="text-gray-400 mb-2 text-xs sm:text-sm">
                Monthly Allowance:
                <span class="text-gold-primary">â‚¹<%= student.monthlyAllowance.toLocaleString('en-IN') %></span>
              </p>
              <div class="w-full max-w-64 mx-auto h-3 rounded-full bg-gray-800 overflow-hidden">
                <div class="h-full bg-gradient-to-r from-green-500 via-yellow-500 to-red-500" style="width: 100%"></div>
              </div>
            </div>
          </div>

          <div class="space-y-4">
            <div class="bg-black/30 rounded-xl p-3 sm:p-4 border border-gold-primary/20">
              <div class="flex flex-col sm:flex-row justify-between mb-3 space-y-1 sm:space-y-0">
                <div class="text-gray-400 text-xs sm:text-sm">Next AI Update:</div>
                <div class="font-semibold text-xs sm:text-sm"><%= new Date(new Date(student.aiAdviceGeneratedAt).getTime() + 7 * 24 * 60 * 60 * 1000).toDateString() %></div>
              </div>
              <div class="flex flex-col sm:flex-row justify-between">
                <div class="text-gray-400 text-xs sm:text-sm">Funding Status:</div>
                <div class="text-green-400 font-semibold text-xs sm:text-sm">Confirmed</div>
              </div>
            </div>
            
            <div class="bg-black/30 rounded-xl p-3 sm:p-4 border border-gold-primary/20">
              <p class="text-gray-400 text-xs sm:text-sm leading-relaxed">
                <span class="font-semibold text-white">Beta Notice:</span>
                This project is currently in Beta. Core features are functional, but many enhancements are under development. We appreciate your patience as we continue refining the platform.
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Goals Section -->
      <div class="grid-goals">
        <div class="holographic-card p-4 sm:p-6">
          <div class="flex justify-between items-center mb-4 sm:mb-6">
            <h2 class="text-lg sm:text-xl font-bold font-orbitron text-gold-primary tracking-wider">
              ðŸŽ¯ FINANCIAL GOALS
            </h2>
          </div>

          <div class="grid grid-cols-1 gap-4">
            <% if (student.financialGoals && student.financialGoals.length> 0) { %>
              <% student.financialGoals.forEach((goal)=> {
                const progress = goal.goalAmount > 0
                ? Math.min((goal.savedAmount / goal.goalAmount) * 100, 100).toFixed(1)
                : 0;
                %>
                <div class="bg-black/20 p-3 sm:p-4 rounded-xl border border-gold-primary/20 hover:border-gold-primary/50 transition mb-4">
                  <div class="flex items-start">
                    <div class="w-10 h-10 sm:w-12 sm:h-12 rounded-lg bg-blue-500/10 flex items-center justify-center mr-3 flex-shrink-0">
                      <i class="fas fa-laptop text-blue-400 text-lg sm:text-xl"></i>
                    </div>
                    <div class="flex-1 min-w-0">
                      <h3 class="font-bold mb-1 text-sm sm:text-base truncate">
                        <%= goal.name %>
                      </h3>
                      <p class="text-xs sm:text-sm text-gray-400 mb-2">
                        <%= new Date(goal.targetDate).toDateString() %>
                      </p>

                      <div class="flex flex-col sm:flex-row justify-between text-xs mb-2 space-y-1 sm:space-y-0">
                        <span>
                          Saved:
                          <span class="text-green-400">â‚¹<%= goal.savedAmount.toLocaleString('en-IN') %></span>
                        </span>
                        <span>
                          Goal:
                          <span class="text-gold-primary">â‚¹<%= goal.goalAmount.toLocaleString('en-IN') %></span>
                        </span>
                      </div>

                      <div class="w-full bg-gray-800 h-2 rounded overflow-hidden mb-1">
                        <div class="bg-gold-primary h-2" style="width: <%= progress %>%"></div>
                      </div>

                      <p class="text-xs text-gray-400 text-right">
                        <%= progress %>% complete
                      </p>
                    </div>
                  </div>
                </div>
              <% }) %>
            <% } else { %>
              <p class="text-sm text-gray-500 italic">No financial goals added yet.</p>
            <% } %>

            <!-- Add Goal Card -->
            <div class="bg-black/10 p-4 rounded-xl border-2 border-dashed border-gold-primary/30 flex flex-col items-center justify-center text-center hover:border-gold-primary/60 hover:bg-gold-primary/10 transition cursor-pointer">
              <button id="open-goal-modal" class="bg-gold-primary text-black font-bold px-4 py-2 rounded mb-4 text-sm">
                + Add New Goal
              </button>
              <p class="text-xs text-gray-400 mt-1">Create a new financial target</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Insights Section -->
      <div class="grid-insights">
        <div class="holographic-card p-4 sm:p-6 h-auto lg:h-full">
          <div class="flex justify-between items-center mb-4 sm:mb-6">
            <h2 class="text-lg sm:text-xl font-bold font-orbitron text-gold-primary tracking-wider">
              ðŸ’¡ AI INSIGHTS
            </h2>
            <div class="w-8 h-8 rounded-full bg-blue-500/10 flex items-center justify-center text-blue-400">
              <i class="fas fa-robot"></i>
            </div>
          </div>

          <div class="space-y-3 sm:space-y-4">
            <% if (student.aiAdvice) { 
              const tips = student.aiAdvice.split('- ').filter(Boolean).slice(1);
            %>
              <% tips.forEach((tip, index) => { %>
                <div class="bg-gradient-to-r from-blue-900/30 to-blue-900/10 p-3 sm:p-4 rounded-xl border border-blue-500/30 mb-4 <%= index >= 2 ? 'hidden extra-tip' : '' %>">
                  <div class="flex items-start">
                    <div class="w-8 h-8 rounded-full bg-blue-500/10 flex items-center justify-center mr-3 mt-1 flex-shrink-0">
                      <i class="fas fa-lightbulb text-blue-400"></i>
                    </div>
                    <div class="flex-1 min-w-0">
                      <p class="text-white text-xs sm:text-sm leading-relaxed"><%= tip.trim() %></p>
                      <div class="flex flex-col sm:flex-row sm:items-center mt-2 space-y-1 sm:space-y-0">
                        <span class="text-xs bg-blue-500/20 px-2 py-1 rounded text-blue-400 w-fit">Savings Tip <%= index + 1 %></span>
                        <span class="text-xs text-gray-400 sm:ml-3">
                          Generated on <%= new Date(student.aiAdviceGeneratedAt).toDateString() %>
                        </span>
                      </div>
                    </div>
                  </div>
                </div>
              <% }) %>

              <% if (tips.length > 2) { %>
                <div class="text-center">
                  <button
                    id="toggleTips"
