<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Personal Finance Tracker - Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/login.css">
</head>
<body>
    <div class="vault-door" id="vault-door"></div>
    
    <div class="container">
        <div class="card">
            <div class="logo">
                <div class="logo-icon">
                    <i class="fas fa-brain"></i>
                </div>
                <h1>AI Financial Guardian</h1>
                <p class="tagline">Secure your financial future</p>
            </div>
            
            <div class="alert" id="error-alert">
                <i class="fas fa-exclamation-triangle"></i>
                <div class="alert-text" id="alert-text">Invalid credentials</div>
            </div>
            
            <form id="login-form" action="/user/login" method="POST">
                <!-- Email/Phone -->
                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input type="text" class="form-control" name="email" id="login-credential" placeholder="you@domain.com or +1 (555)..." autofocus>
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                </div>
                
                <!-- Password -->
                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-key input-icon"></i>
                        <input type="password" class="form-control" name="password" id="password" placeholder="••••••••">
                        <button type="button" class="password-toggle" id="toggle-password">
                            <i class="far fa-eye"></i>
                        </button>
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                    <div class="strength-meter">
                        <div class="strength-progress" id="password-strength"></div>
                    </div>
                </div>
                
                <!-- Helper Options -->
                <div class="helper-options">
                    <div class="checkbox-group">
                        <div class="checkbox-custom" id="remember-check">
                            <i class="fas fa-check"></i>
                        </div>
                        <span class="checkbox-label">Remember Me</span>
                    </div>
                    <a href="#" class="forgot-password">Forgot Password?</a>
                </div>
                
                <!-- Action Buttons -->
                <button class="btn btn-primary" id="login-btn">
                    <i class="fas fa-lock"></i> Log In
                    <div class="loading-ring" id="loading-ring"></div>
                </button>
                <button type="button" class="btn btn-ghost" id="guest-btn">
                    Continue as Guest
                </button>
                
                <!-- Alternative Login -->
                <div class="divider">
                    <span>or</span>
                </div>
                
                <div class="oauth-buttons">
                    <button type="button" class="oauth-btn">
                        <i class="fab fa-google"></i> Google
                    </button>
                    <button type="button" class="oauth-btn">
                        <i class="fab fa-apple"></i> Apple
                    </button>
                </div>
                
                <!-- Security Features -->
                <div class="security-features">
                    <div class="security-item">
                        <i class="fas fa-shield-alt"></i>
                        <span>JWT Secured</span>
                    </div>
                    <div class="security-item">
                        <i class="fas fa-clock"></i>
                        <span id="last-login">Last login: --/--/----</span>
                    </div>
                    <div class="security-item">
                        <i class="fas fa-fingerprint"></i>
                        <span>Device ID</span>
                    </div>
                </div>
            </form>
        </div>
    </div>
    
    <div class="ai-mascot">
        <i class="fas fa-robot"></i>
    </div>
    
    <div class="guest-banner" id="guest-banner">
        Sign up to unlock full AI insights and personalized financial tracking
    </div>

    <script src="/scripts/login.js"></script>
</body>
</html>