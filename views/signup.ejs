<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Finance Tracker - Registration</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/signup.css">
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="header">
                <div class="logo">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h1>Create Your Account</h1>
                <p>Join our financial community in seconds</p>
            </div>
            
            <form id="registration-form" action="/user/signup" method="POST">
                <!-- Full Name -->
                <div class="form-group">
                    <label class="label required">Full Name</label>
                    <div class="input-wrapper">
                        <input type="text" class="form-control" id="full-name" name="fullName" placeholder="First and Last Name" required>
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                </div>
                
                <!-- Email -->
                <div class="form-group">
                    <label class="label required">Email</label>
                    <div class="input-wrapper">
                        <input type="email" class="form-control" id="email" name="email" placeholder="you@domain.com" required>
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                    <div class="hint" id="email-hint"></div>
                </div>
                
                <!-- Password -->
                <div class="form-group">
                    <label class="label required">Password</label>
                    <div class="input-wrapper">
                        <input type="password" class="form-control" id="password" name="password" placeholder="••••••••" required>
                        <button type="button" class="password-toggle" id="toggle-password">
                            <i class="far fa-eye"></i>
                        </button>
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                    <div class="strength-meter">
                        <div class="strength-progress" id="password-strength"></div>
                    </div>
                    <div class="hint">8+ characters, 1 number, 1 symbol</div>
                </div>
                
                <!-- Phone Number -->
                <div class="form-group">
                    <label class="label optional">Phone Number <span class="optional">(optional)</span></label>
                    <div class="input-wrapper">
                        <input type="tel" class="form-control" id="phone" name="phoneNumber" placeholder="9123456789">
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                    <div class="hint">Auto-formats to international format</div>
                </div>
                
                <!-- Currency -->
                <div class="form-group">
                    <label class="label optional">Currency</label>
                    <div class="currency-selector">
                        <div class="currency-option active" data-currency="INR">₹ INR</div>
                        <div class="currency-option" data-currency="USD">$ USD</div>
                        <div class="currency-option" data-currency="EUR">€ EUR</div>
                    </div>
                    <!-- Hidden input to actually submit -->
                    <input type="hidden" name="currency" id="currency-input" value="INR" />
                </div>
                
                <!-- Monthly Income -->
                <div class="form-group">
                    <label class="label optional">Monthly Income</label>
                    <div class="input-wrapper income-wrapper">
                        <span class="currency-prefix">₹</span>
                        <input type="text" class="form-control income-input" id="income" name="monthlyIncome" placeholder="0.00">
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                    <div class="hint">Auto-formats numbers with commas</div>
                </div>
                
                <!-- Notification Preferences -->
                <div class="form-group">
                    <label class="label optional">Notification Preferences</label>
                    <div class="notification-toggle">
                        <div class="toggle-item">
                            <span>Email</span>
                            <label class="toggle-switch">
                                <input type="checkbox" id="email-toggle" checked>
                                <span class="toggle-slider"></span>
                            </label>
                        </div>
                        <div class="toggle-item">
                            <span>SMS</span>
                            <label class="toggle-switch">
                                <input type="checkbox" id="sms-toggle">
                                <span class="toggle-slider"></span>
                            </label>
                        </div>
                    </div>
                    <input type="hidden" name="notificationPreferences" id="notification-preferences-input" value="email" />
                </div>
                
                <!-- User Type -->
                <div class="form-group">
                    <label class="label optional">User Type</label>
                    <select class="form-control" id="user-type" name="userType">
                        <option value="guest">Guest</option>
                        <option value="student">Student</option>
                        <option value="employed">Employed</option>
                        <option value="unemployed">Unemployed</option>
                        <option value="retired">Retired</option>
                    </select>
                </div>
                
                <!-- Submit Buttons -->
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-rocket"></i> CREATE ACCOUNT
                </button>

                <a href="/user/guest" class="btn btn-ghost">Continue as Guest</a>
                
                <!-- Security Note -->
                <div class="security-note">
                    <i class="fas fa-lock"></i>
                    <span>256-bit encrypted financial data protection</span>
                </div>
                
                <!-- Terms Notice -->
                <p class="terms">
                    By registering, you agree to our <a href="/privacy-policy">Privacy Policy</a>
                </p>
            </form>
        </div>
    </div>

    <script src="/scripts/signup.js"></script>
</body>
</html>