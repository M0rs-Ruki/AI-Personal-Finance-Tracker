<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Personal Finance Tracker - Registration</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/styles/signup.css">
</head>
<body>
    <div class="container">
        <div class="card">
            <div class="logo">
                <div class="logo-icon">
                    <i class="fas fa-robot"></i>
                </div>
                <h1>Create Your Financial Guardian</h1>
            </div>
            <p class="subtitle">Secure account setup in 60 seconds</p>
            
            <form id="registration-form" action="/user/signup" method="POST">
                <!-- Full Name -->
                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-user input-icon"></i>
                        <input type="text" class="form-control" id="full-name" name="fullName" placeholder="First and Last Name" required>
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                </div>
                
                <!-- Email -->
                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-envelope input-icon"></i>
                        <input type="email" class="form-control" id="email" name="email" placeholder="you@domain.com" required>
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                </div>
                
                <!-- Password -->
                <div class="form-group">
                    <div class="input-wrapper">
                        <i class="fas fa-key input-icon"></i>
                        <input type="password" class="form-control" id="password" name="password" placeholder="••••••••" required>
                        <button type="button" class="password-toggle" id="toggle-password">
                            <i class="far fa-eye"></i>
                        </button>
                        <i class="fas fa-check-circle validation-icon"></i>
                    </div>
                    <div class="strength-meter">
                        <div class="strength-progress" id="password-strength"></div>
                    </div>
                </div>
                
                <!-- Optional Fields Toggle -->
                <button type="button" class="toggle-btn" id="toggle-optional">
                    <i class="fas fa-cog"></i> More Options
                </button>
                
                <!-- Optional Fields Section -->
                <div class="optional-section" id="optional-section">
                    <div class="optional-content">
                        <!-- Phone Number -->
                        <div class="form-group">
                            <div class="input-wrapper">
                                <i class="fas fa-mobile-alt input-icon"></i>
                                <input type="tel" class="form-control" id="phone" name="phoneNumber" placeholder="+91 98765 43210" pattern="^\+?\d{1,3}[-.\s]?\d{1,4}[-.\s]?\d{4,10}$">
                                <i class="fas fa-check-circle validation-icon"></i>
                            </div>
                            <p class="optional-field-note">For SMS alerts only</p>
                        </div>
                        
                        <!-- Currency -->
                        <div class="form-group">
                            <div class="input-wrapper">
                                <i class="fas fa-money-bill-wave input-icon"></i>
                                <select class="form-control" id="currency" name="currency">
                                    <option value="INR" selected>INR ₹ (Indian Rupee)</option>
                                    <option value="USD">USD $ (US Dollar)</option>
                                    <option value="EUR">EUR € (Euro)</option>
                                    <option value="GBP">GBP £ (British Pound)</option>
                                    <option value="JPY">JPY ¥ (Japanese Yen)</option>
                                </select>
                            </div>
                        </div>
                        
                        <!-- Monthly Income -->
                        <div class="form-group">
                            <div class="input-wrapper">
                                <i class="fas fa-coins input-icon"></i>
                                <input type="text" class="form-control" id="income" placeholder="0.00">
                                <i class="fas fa-check-circle validation-icon"></i>
                            </div>
                            <p class="optional-field-note">Helps personalize budget suggestions</p>
                        </div>
                        
                        <!-- Budget Goals -->
                        <div class="form-group">
                            <h3 class="optional-title"><i class="fas fa-bullseye"></i> Budget Goals</h3>
                            
                            <div class="budget-goal">
                                <div class="goal-visual">
                                    <div class="goal-progress"></div>
                                    <i class="fas fa-utensils" style="font-size: 14px;"></i>
                                </div>
                                <input type="text" class="goal-input" placeholder="e.g., 15,000 ₹/month">
                            </div>
                            
                            <div class="budget-goal">
                                <div class="goal-visual">
                                    <div class="goal-progress" style="transform: rotate(180deg);"></div>
                                    <i class="fas fa-home" style="font-size: 14px;"></i>
                                </div>
                                <input type="text" class="goal-input" placeholder="e.g., 30,000 ₹/month">
                            </div>
                            
                            <div class="budget-goal">
                                <div class="goal-visual">
                                    <div class="goal-progress" style="transform: rotate(270deg);"></div>
                                    <i class="fas fa-suitcase" style="font-size: 14px;"></i>
                                </div>
                                <input type="text" class="goal-input" placeholder="e.g., 10,000 ₹/month">
                            </div>
                            
                            <p class="optional-field-note">Edit anytime in settings</p>
                        </div>
                        
                        <!-- Notification Preferences -->
                        <div class="form-group">
                            <h3 class="optional-title"><i class="fas fa-bell"></i> Notification Preferences</h3>
                            
                            <div class="checkbox-group">
                                <div class="checkbox-custom checked" id="email-check">
                                    <i class="fas fa-check"></i>
                                </div>
                                <span class="checkbox-label">Email</span>
                            </div>
                            
                            <div class="checkbox-group checkbox-disabled">
                                <div class="checkbox-custom" id="sms-check">
                                    <i class="fas fa-check"></i>
                                </div>
                                <span class="checkbox-label">SMS (requires phone verification)</span>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Security Badge -->
                <div class="security-badge">
                    <i class="fas fa-shield-alt"></i>
                    <span>256-bit encrypted financial data protection</span>
                </div>
                
                <!-- Submit Buttons -->
                <button class="btn btn-primary">
                    <i class="fas fa-lock"></i> Create Account
                </button>
                <button type="button" class="btn btn-ghost">
                    Continue as Guest
                </button>
                
                <!-- Terms Notice -->
                <p class="terms">
                    By registering, you agree to our <a href="#">Privacy Policy</a> and <a href="#">Terms</a>.<br>
                    We never sell your financial data.
                </p>
            </form>
        </div>
    </div>

    <script src="/scripts/signup.js"></script>
</body>
</html>