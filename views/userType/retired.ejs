<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Retired User Profile Setup</title>
</head>
<body>
  <h1>Retired User Profile Setup</h1>
  <form action="/userType/retired" method="POST">
    <input type="hidden" name="userId" value="<%= userId %>" />

    <!-- INCOME SOURCES -->
    <fieldset>
      <legend>Pension</legend>
      <label>
        Receive Pension?
        <input type="checkbox" name="pension[receives]" value="true">
      </label>
      <label>Amount: <input type="number" name="pension[amount]" step="0.01"></label>
      <label>Frequency:
        <select name="pension[frequency]">
          <option value="monthly">Monthly</option>
          <option value="quarterly">Quarterly</option>
          <option value="semi-annual">Semi-Annual</option>
          <option value="annual">Annual</option>
        </select>
      </label>
      <label>Start Date: <input type="date" name="pension[startDate]"></label>
    </fieldset>

    <fieldset>
      <legend>Social Security</legend>
      <label>
        Receive?
        <input type="checkbox" name="socialSecurity[receives]" value="true">
      </label>
      <label>Monthly Amount: <input type="number" name="socialSecurity[monthlyAmount]" step="0.01"></label>
      <label>Start Date: <input type="date" name="socialSecurity[startDate]"></label>
    </fieldset>

    <fieldset>
      <legend>Other Income Sources</legend>
      <div id="otherIncomeSourcesContainer">
        <div class="source">
          <input type="text" name="otherIncomeSources[0][source]" placeholder="Source">
          <input type="number" name="otherIncomeSources[0][amount]" placeholder="Amount">
          <select name="otherIncomeSources[0][frequency]">
            <option value="monthly">Monthly</option>
            <option value="quarterly">Quarterly</option>
            <option value="semi-annual">Semi-Annual</option>
            <option value="annual">Annual</option>
            <option value="occasional">Occasional</option>
          </select>
          <label>Taxable? <input type="checkbox" name="otherIncomeSources[0][taxable]" checked></label>
        </div>
      </div>
    </fieldset>

    <!-- EXPENSES -->
    <fieldset>
      <legend>Housing</legend>
      <label>Mortgage/Rent: <input type="number" name="housing[mortgageOrRent]"></label>
      <label>Property Tax: <input type="number" name="housing[propertyTax]"></label>
      <label>Insurance: <input type="number" name="housing[insurance]"></label>
      <label>Utilities: <input type="number" name="housing[utilities]"></label>
      <label>Maintenance: <input type="number" name="housing[maintenance]"></label>
    </fieldset>

    <fieldset>
      <legend>Healthcare</legend>
      <label>Monthly Premium: <input type="number" name="healthcare[monthlyPremium]"></label>
      <label>Out of Pocket: <input type="number" name="healthcare[outOfPocket]"></label>
      <label>Prescriptions: <input type="number" name="healthcare[prescriptions]"></label>
    </fieldset>

    <fieldset>
      <legend>Transportation</legend>
      <label>Car Payment: <input type="number" name="transportation[carPayment]"></label>
      <label>Insurance: <input type="number" name="transportation[insurance]"></label>
      <label>Maintenance: <input type="number" name="transportation[maintenance]"></label>
      <label>Fuel: <input type="number" name="transportation[fuel]"></label>
    </fieldset>

    <!-- RETIREMENT ACCOUNTS -->
    <fieldset>
      <legend>Retirement Accounts</legend>
      <div class="account">
        <input type="text" name="retirementAccounts[0][accountName]" placeholder="Name">
        <select name="retirementAccounts[0][type]">
          <option value="Savings Account">Savings</option>
          <option value="Current Account">Current</option>
          <option value="Fixed Deposit (FD) Account">FD</option>
          <option value="Recurring Deposit (RD) Account">RD</option>
          <option value="Salary Account">Salary</option>
          <option value="Other">Other</option>
        </select>
        <input type="number" name="retirementAccounts[0][currentValue]" placeholder="Current Value">
        <input type="text" name="retirementAccounts[0][institution]" placeholder="Institution">
        <input type="date" name="retirementAccounts[0][lastUpdated]">
      </div>
    </fieldset>

    <!-- REAL ESTATE -->
    <fieldset>
      <legend>Real Estate</legend>
      <div class="property">
        <select name="realEstate[0][type]">
          <option value="primary">Primary</option>
          <option value="rental">Rental</option>
          <option value="vacation">Vacation</option>
          <option value="land">Land</option>
          <option value="other">Other</option>
        </select>
        <input type="number" name="realEstate[0][estimatedValue]" placeholder="Estimated Value">
        <input type="number" name="realEstate[0][mortgage][balance]" placeholder="Mortgage Balance">
        <input type="number" name="realEstate[0][mortgage][payment]" placeholder="Mortgage Payment">
        <input type="number" name="realEstate[0][monthlyIncome]" placeholder="Monthly Income">
      </div>
    </fieldset>

    <!-- SAVINGS GOALS -->
    <fieldset>
      <legend>Savings Goals</legend>
      <div class="goal">
        <input type="text" name="savingsGoals[0][name]" placeholder="Goal Name">
        <input type="number" name="savingsGoals[0][targetAmount]" placeholder="Target Amount">
        <input type="number" name="savingsGoals[0][currentAmount]" placeholder="Current Amount">
        <input type="date" name="savingsGoals[0][targetDate]">
        <select name="savingsGoals[0][category]">
          <option value="travel">Travel</option>
          <option value="medical">Medical</option>
          <option value="gifts">Gifts</option>
          <option value="home-improvement">Home Improvement</option>
          <option value="emergency">Emergency</option>
          <option value="other">Other</option>
        </select>
        <select name="savingsGoals[0][priority]">
          <option value="high">High</option>
          <option value="medium" selected>Medium</option>
          <option value="low">Low</option>
        </select>
      </div>
    </fieldset>

    <!-- LEGACY PLANNING -->
    <fieldset>
      <legend>Legacy Planning</legend>
      <label>Has Will? <input type="checkbox" name="legacyPlanning[hasWill]"></label>
      <label>Will Last Updated: <input type="date" name="legacyPlanning[willLastUpdated]"></label>
      <label>Has Estate Plan? <input type="checkbox" name="legacyPlanning[hasEstatePlan]"></label>
      <label>Estate Plan Last Updated: <input type="date" name="legacyPlanning[estatePlanLastUpdated]"></label>
      <label>Has Power of Attorney? <input type="checkbox" name="legacyPlanning[hasPowerOfAttorney]"></label>
      <label>Has Healthcare Directive? <input type="checkbox" name="legacyPlanning[hasHealthcareDirective]"></label>

      <div class="beneficiary">
        <input type="text" name="legacyPlanning[beneficiaries][0][name]" placeholder="Beneficiary Name">
        <select name="legacyPlanning[beneficiaries][0][relationship]">
          <option value="spouse">Spouse</option>
          <option value="child">Child</option>
          <option value="parent">Parent</option>
          <option value="sibling">Sibling</option>
          <option value="grandchild">Grandchild</option>
          <option value="friend">Friend</option>
          <option value="charity">Charity</option>
          <option value="other">Other</option>
        </select>
        <input type="number" name="legacyPlanning[beneficiaries][0][percentage]" placeholder="%" step="0.01">
        <label>Contingent? <input type="checkbox" name="legacyPlanning[beneficiaries][0][contingent]"></label>
      </div>
    </fieldset>

    <!-- OTHER -->
    <fieldset>
      <legend>Additional</legend>
      <label>Risk Tolerance:
        <select name="riskTolerance">
          <option value="conservative">Conservative</option>
          <option value="moderate" selected>Moderate</option>
          <option value="aggressive">Aggressive</option>
        </select>
      </label>
      <label>Notes:
        <textarea name="notes" rows="3" cols="40"></textarea>
      </label>
    </fieldset>

    <button type="submit">Submit Profile</button>
  </form>

</body>
</html>
